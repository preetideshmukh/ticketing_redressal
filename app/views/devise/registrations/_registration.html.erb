</tr>
<tr>
  <td>
     <div class="form-group1 top">
        <div class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-envelope"></i>
            </span>
        <%= f.email_field :email,:class=>"form-control input-md",:placeholder=>"Email",:id=>"account", autofocus: true %>
        </div>
        </div>
    </td>
</tr>

<tr>
  <td>
     <div class="form-group1 top">
        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-phone"></i>
          </span>
          <%= f.text_field :mobile_no,:class=>"form-control input-md",:placeholder=>"MobileNo",:id=>"account", autofocus: true %>
      </div>
    </div>
  </td>
</tr>
