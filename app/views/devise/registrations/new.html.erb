<body style="background-color:#C5BE3B;">
<div class="signup-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:id => 'sign_up'}) do |f| %>
    <%= devise_error_messages! %>
    <table>
      <tr>
        <h2 class="signup-tag">Sign Up</h2>
      </tr>
      <tr> 
        <td>
          <span class="icon">
            <i class="glyphicon glyphicon-user"></i>
          </span>
        </td>
        <td>
          <%= f.text_field :firstname,:class=>"input-signup",:placeholder=>"Firstname",autofocus: true %>
        </td>
        <td>     
          <%= f.text_field :lastname,:class=>"input-signup",:placeholder=>"Lastname",:id=>"last", autofocus: true %>
        </td>
      </tr>
      <tr>
        <td>      
          <span class="icon">
            <i class="glyphicon glyphicon-envelope"></i>
          </span>
        </td>
        <td>
          <%= f.email_field :email,:class=>"input-signup",:placeholder=>"Email",:id=>"account", autofocus: true %>
        </td>
      </tr>
      <tr>
        <td>      
          <span class="icon">
            <i class="glyphicon glyphicon-phone"></i>
          </span>
        </td>
        <td>
          <%= f.text_field :mobile_no,:class=>"input-signup",:placeholder=>"MobileNo",:id=>"account", autofocus: true %>
        </td>
      </tr>
      <tr>
        <td>      
          <span class="icon">
            <i class="glyphicon glyphicon-home"></i>
          </span>
        </td>
        <td>
          <%= f.text_area :address_1,:class=>"input-signup",:placeholder=>"Address",:id=>"address", autofocus: true %>
        </td>
      </tr>
    </table>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        <% end %>
      
    <div id="actions">
      <%= f.submit "Sign up" ,:class=>"signup-button"%>
    </div>
  <% end %>
<div id="registerr">Already Registered? <a href="/users/sign_in">Login here</a></div>
</div>

</body>