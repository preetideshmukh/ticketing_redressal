<div class='panel panel-default' id='forgot_password'>
  <div class='panel-body'>
    <div class='img'>
      <%= link_to (image_tag "download.jpeg")%>
    </div>
    <div class="password">
         <h3>Forgot your password?</h3>
      <p>
        You can reset your password here.
      </p>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
      <div class='col-xs-10 col-xs-offset-1'>
        <%= f.email_field :email, :class=>"form-control input-xs  ",:placeholder=>"Email address",:style=>"width: 100%",autofocus: true %>
      </div>
    <br/>
    <br/>
    <br/>
    <div class="actions">
      <%= f.submit "Send me reset password instructions",:class=>"btn btn-primary button"%>
    </div>
    <div class="login">
       <a href="/users/sign_in">Sign In</a><br/><br/>
       <a href="/users/sign_up">Register</a>
    </div>
    <% end %>
  </div>
</div>