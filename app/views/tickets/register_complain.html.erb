<div class="logincontainer">
  <div class="row centered-form">
      <div class="col-md-6 col-md-offset-3"> 
        <div class="panel panel-edit">
          <div class='container-heading'>
            <h2>
              <span class='label label-default'>Enter following details to register complain</span>
            </h2>
        </div>
<%= form_for @ticket, :url=> create_complain_path, :method => :post, :html => {:id=> 'reg_cmpl'}  do |f| %>
<center>  
	<table summary=" User form fields">
	<tr>
	  <td>
	    <div class="form-group1 top">
			<span class="input-group-addon-edit">
				<i class="glyphicon glyphicon-user"></i>
			</span>	        
	    </div>
	    <%= f.collection_select :user_id, User.where(:configuration_status => true), :id, :company_name, { :prompt => 'Select Company'}, :class => "regcmplselect" %>
	  </td>
	  <td>
	    <div class="form-group2 "> 
	        <div class="input-group-edit">     
	            <%= f.text_field :participant_name,:class=>"input-md-edit",:placeholder=>"Name", :id => "last-edit", autofocus: true, :style => "margin-top: 12%" %>
	          </div>
	      </div>
	  </td>
	</tr>
	<tr>
	  <td>
	     <div class="form-group1 top">
	     	<span class="input-group-addon-edit">
	          <i class="glyphicon glyphicon-envelope"></i>
	        </span>
	        <div class="input-group-edit">            
	        	<%= f.email_field :participant_email,:class=>"input-md-edit",:placeholder=>"Email",:id=>"account", autofocus: true %>
	        </div>
	        </div>
	    </td>
	</tr>
	
	<tr>
	  <td>
	     <div class="form-group1 top">
	     	<span class="input-group-addon-edit">
	          <i class="glyphicon glyphicon-phone"></i>
	        </span>
	        <div class="input-group-edit">          
	          <%= f.text_field :participant_mobile_no,:class=>"input-md-edit",:placeholder=>"MobileNo",:id=>"account", autofocus: true %>
	      </div>
	    </div>
	  </td>
	</tr>
	
	  </table>
</center>
  <div class="actions">
    <%= f.submit "Update",:class=>"user-edit-button" %>
    <%= link_to "Back", tickets_path, :class=>"user-back-button" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>


